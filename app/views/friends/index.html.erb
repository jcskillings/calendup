<h1>Listing friends</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Nickname</th>
      <th>All</th>
      <th>Family</th>
      <th>Friend</th>
      <th>Work</th>
      <th>School</th>
      <th>Personal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.title %></td>
        <td><%= friend.nickname %></td>
        <td><%= friend.all %></td>
        <td><%= friend.family %></td>
        <td><%= friend.friend %></td>
        <td><%= friend.work %></td>
        <td><%= friend.school %></td>
        <td><%= friend.personal %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

